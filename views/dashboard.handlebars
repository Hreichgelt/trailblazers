<section class="mt-3">
  <div class="bg-light vh-100">
    <h2 class="m-4 pt-3 text-center">Favorite Parks</h2>
    {{#if message}}
      <div class="card-body d-flex align-items-center flex-column">
        <h3>Adventure is out there!</h3>
        <p>No parks favorited yet. <a href="/">Return to Homepage.</a></p>
      </div>
    {{else}}
      <div class="card-body d-flex justify-content-center">
        {{#each parks}}
          <button class="card m-3 p-2 align-items-center" style="width: 18rem;">
            <a
              href="/park/{{parkCode}}"
              class="nav-link font-weight-bold"
            >{{fullName}}</a>
          </button>
        {{/each}}
      </div>
    {{/if}}

  </div>
</section>